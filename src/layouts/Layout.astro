---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="description"
      content="The meetup for JavaScript enthusiasts in the Munich area."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>MunichJS - {title}</title>
    <style global>
      html,
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family:
          Futura,
          Trebuchet MS,
          Arial,
          sans-serif;
        color: white;
      }

      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        background: hsla(213, 77%, 14%, 1);
        background: linear-gradient(
          90deg,
          hsla(213, 77%, 14%, 1) 0%,
          hsla(202, 27%, 45%, 1) 100%
        );
        background: -moz-linear-gradient(
          90deg,
          hsla(213, 77%, 14%, 1) 0%,
          hsla(202, 27%, 45%, 1) 100%
        );
        background: -webkit-linear-gradient(
          90deg,
          hsla(213, 77%, 14%, 1) 0%,
          hsla(202, 27%, 45%, 1) 100%
        );
        filter: progid: DXImageTransform.Microsoft.gradient( startColorstr="#08203E", endColorstr="#557C93", GradientType=1 );
        background-attachment: fixed;
      }

      h1,
      section h2 {
        font-size: 1rem;
        font-weight: normal;
      }

      span.sep {
        font-size: 0.7rem;
      }

      a {
        color: white;
      }

      img {
        max-width: 100%;
      }

      section {
        display: flex;
        align-items: center;
        flex-direction: column;
      }

      section + section {
        margin-top: 2rem;
      }

      body > * {
        max-width: 650px;
        padding: 0 2rem;
      }

      header,
      footer {
        padding: 2rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      ul {
        display: flex;
        padding: 0;
        margin: 0;
        list-style: none;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <header>
      <a href="/"><h1>MunichJS - JavaScript User Group</h1></a>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <a
        href="https://www.meetup.com/MunichJS-User-Group/"
        target="_blank"
        rel="nofollow">Meetup Group</a
      >
      <span class="sep">|</span>
      <a
        href="https://www.meetup.com/munichjs-user-group/members/?op=leaders"
        target="_blank"
        rel="nofollow">Contact</a
      >
      <span class="sep">|</span><a href="/legal-disclaimer">Legal Disclaimer</a>
      <span class="sep">|</span><a href="/imprint">Imprint</a>
    </footer>
  </body>
</html>
